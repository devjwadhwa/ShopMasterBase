<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_back"
        android:name="com.example.bottomnavigationbar.back"
        android:label="@string/title_back"
        tools:layout="@layout/fragment_back" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bottomnavigationbar.home"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_menu"
        android:name="com.example.bottomnavigationbar.menu"
        android:label="@string/title_menu"
        tools:layout="@layout/fragment_menu" />

</navigation>